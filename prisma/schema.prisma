generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model Devis {
  id        String   @id @default(uuid())
  client    String
  email     String
  lignes    Ligne[]
  totalHT   Float
  tva       Float
  totalTTC  Float
  createdAt DateTime @default(now())
}

model Ligne {
  id        String   @id @default(uuid())
  description String
  quantite   Int
  prixHT     Float
  devisId    String
  devis      Devis   @relation(fields: [devisId], references: [id])
}